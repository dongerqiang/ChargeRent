<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/windowInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/shape_rect_write_bg"
    android:padding="12dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_car"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="还车点：东华大学"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="地址：东华大学"
            android:textColor="#a6a6a6"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/chragImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/street_1"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/disTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="说明：距离当前位置"
                android:textColor="#a6a6a6"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="2.9km"
                android:textColor="#0f7ce9"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text=",xxxxxx"
                android:textColor="#a6a6a6"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/CarCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="可用车辆：22辆"
            android:textColor="#a6a6a6"
            android:textSize="14sp" />

       <!-- <TextView
            android:id="@+id/CarList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="车辆列表："
            android:textColor="#a6a6a6"
            android:textSize="14sp" />-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecycleview"
            android:divider="@null"
            android:layout_width="wrap_content"
            android:layout_height="90dp">

        </android.support.v7.widget.RecyclerView>
        <!--<TextView
            android:id="@+id/chragCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="充电桩数：6个"
            android:textColor="#a6a6a6"
            android:textSize="14sp" />-->
    </LinearLayout>
    <!--<ImageView
        android:id="@+id/imgClose"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_gravity="right|top"
        android:scaleType="center"
        android:src="@drawable/icon_close" />-->

    <TextView
        android:id="@+id/routeDaohang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:text="导航"
        android:textColor="@color/bg" />
    </LinearLayout>
</FrameLayout>
